  {{ macrosBootstrap.btn2(bsLink().icon('fa-window-close').class('ajax').href(path(route_async_worker_runner_kill, { 'runnerId': runner.id })).title('Runner resetten').attr('data-confirm', 'Wirklich resetten?')) }}
